{
  "name": "connect-device-tools",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@9.9.0",
  "description": "檢查案場設備是否正常運作，找出送出訊號都是 0 的設備",
  "author": "airaTaiwan <https://github.com/airaTaiwan>",
  "license": "MIT",
  "homepage": "https://github.com/airaTaiwan/connect-device-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/airaTaiwan/connect-devcie-tools.git"
  },
  "bugs": "https://github.com/airaTaiwan/connect-device-tools/issues",
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild --verbose",
    "lint": "eslint .",
    "release": "bumpp",
    "start": "esno src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "find output -type f ! -name 'README.md' -delete"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.3.2",
    "@antfu/ni": "^0.23.0",
    "@antfu/utils": "^0.7.10",
    "@types/node": "^22.5.4",
    "bumpp": "^9.5.2",
    "cac": "^6.7.14",
    "consola": "^3.2.3",
    "eslint": "^9.9.1",
    "esno": "^4.7.0",
    "lint-staged": "^15.2.10",
    "pnpm": "^9.9.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.5.4",
    "unbuild": "^2.0.0",
    "vite": "^5.4.3",
    "vitest": "^2.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
